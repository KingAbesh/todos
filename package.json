{
  "name": "todos",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/kingabesh/todos.git",
  "author": "Abasifreke Ekwere <abeshekwere@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "14"
  },
  "scripts": {
    "build": "rimraf ./build && tsc",
    "clear:build": "rimraf ./build",
    "build:watch": "tsc -w",
    "start": "cross-env NODE_ENV=production node build/server.js",
    "start:dev": "rimraf ./build && tsc && nodemon build/server.js",
    "start:staging": "cross-env NODE_ENV=staging node build/server.js ",
    "test": "cross-env NODE_ENV=test sequelize-cli db:drop && cross-env NODE_ENV=test sequelize-cli db:create && cross-env NODE_ENV=test sequelize-cli db:migrate && cross-env NODE_ENV=test jest build/__tests__/**/*.js --forceExit",
    "dev": "concurrently -k \"tsc  -w\" \"nodemon build/server.js\"",
    "coverage": "jest --coverage --detectOpenHandles --forceExit",
    "db:init": "sequelize-cli db:create",
    "db:drop": "sequelize-cli db:drop",
    "migration": "sequelize-cli db:migrate && sequelize-cli db:seed:all",
    "migration:clean": "sequelize-cli db:drop && sequelize-cli db:create && sequelize-cli db:migrate && sequelize-cli db:seed:all"
  },
  "_moduleAliases": {
    "@config": "build/config",
    "@db": "src/db",
    "@helpers": "build/helpers",
    "@modules": "build/modules",
    "@middlewares": "build/middlewares",
    "@constants": "build/constants"
  },
  "jest": {
    "moduleNameMapper": {
      "^@config$": "<rootDir>/build/config",
      "^@db$": "<rootDir>/src/db",
      "^@helpers(.*)$": "<rootDir>/build/helpers$1",
      "^@modules(.*)$": "<rootDir>/build/modules$1",
      "^@middlewares(.*)$": "<rootDir>/build/middlewares$1",
      "^@constants(.*)$": "<rootDir>/build/constants$1"
    },
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@types/bcrypt": "^3.0.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.14",
    "@types/hapi__joi": "^17.1.3",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.13",
    "@types/redis": "^4.0.11",
    "@types/sequelize": "^4.28.14",
    "@types/winston": "^2.4.4",
    "babel-jest": "^26.6.3",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "concurrently": "^6.0.1",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "sequelize-cli": "6.2.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-useragent": "^1.0.15",
    "helmet": "^3.23.1",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.3",
    "nanoid": "^3.3.1",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "redis": "^3.1.2",
    "rimraf": "^3.0.2",
    "sequelize": "6.6.2",
    "short-id": "^0.1.0-1",
    "supertest": "^6.1.4",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "x2js": "^3.4.3",
    "yamljs": "^0.3.0"
  }
}
